<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% price_sum = 0.00 %>
    <% qty_sum = 0 %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% price_sum += product.price %>
      <% qty_sum += product.stock_quantity %>
    <% end %>
  </tbody>
</table>

<br>
<%= "Unique Product count: #{@products.uniq.count} " %>
<br>
<% sum = %>
<%= "Average price: #{(price_sum / @products.size.to_f).round(2)}" %>
<br>
<%= "Total Quantity: #{qty_sum}" %>
<br>
<%= link_to 'New Product', new_product_path %>
  
<%100.times do%>
  <p>Chunky Bacon</p>
<%end%>